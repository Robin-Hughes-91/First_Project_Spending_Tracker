<h1>Merchants</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/merchants/new">New Tag</a>
</p>

<h3>Select a merchant to view spending for the merchant</h3>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <% for merchant in @merchant %>
  <tr>
    <td><a href="/merchants/<%= merchant.id %>"><%= merchant.merchant_name %></a></td>
    <td>|</td>
    <td><img width="60" height="20" src= <%= merchant.merchant_logo %> ></td>
    <td>
      <form action="/merchants/<%= merchant.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete" />
      </form>
    </td>
    <td>
      <a href = "/merchants/<%= merchant.id %>/update">
        <input class="btn btn--danger" type="submit" value="update" />
      </a>
    </td>
  </tr>
  <% end %>
</table>
